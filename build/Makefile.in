srcdir = @srcdir@
VPATH = $(srcdir)

LIBOBJECTS = spec.o vspec.o build.o files.o names.o pack.o myftw.o \
		reqprov.o trigger.o
LIBBUILD = libbuild.a
LOADLIBES = -lrpm $(LIBEFENCE)

# -----------------------------------------------------------------------

include $(srcdir)/../Makefile.inc

ifeq (.depend,$(wildcard .depend))
TARGET=everything
else
TARGET=depend everything
endif

all: $(TARGET)

everything: $(LIBBUILD)

$(LIBBUILD): $(LIBOBJECTS) 
	$(AR) r $@ $(LIBOBJECTS)
	$(RANLIB) $@

$(PROGS): $(LIBOBJECTS)

clean:
	rm -f *.a *.o *~ $(PROGS)

distclean: clean
	rm -f .depend Makefile

depend:
	$(CPP) $(CFLAGS) -M $(srcdir)/*.c > .depend

ifeq (.depend,$(wildcard .depend))
include .depend
endif
