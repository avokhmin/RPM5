%pretrans()	%%pretrans %*\
  echo "--- pretrans(%NVRA)      arg $1 ..."\
%nil
%posttrans()	%%posttrans %*\
  echo "--- posttrans(%NVRA)     arg $1 ..."\
%nil
%pre()		%%pre %*\
  echo "--- pre(%NVRA)           arg $1 ..."\
%nil
%post()		%%post %*\
  echo "--- post(%NVRA)          arg $1 ..."\
%nil
%preun()	%%preun %*\
  echo "--- preun(%NVRA)         arg $1 ..."\
%nil
%postun()	%%postun %*\
  echo "--- postun(%NVRA)        arg $1 ..."\
%nil
%verifyscript()	%%verifyscript %*\
  echo "--- verifyscript(%NVRA)  arg $1 ..."\
%nil
%sanitycheck()	%%sanitycheck %*\
