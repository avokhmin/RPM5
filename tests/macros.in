%nil

%triggerprein()	%%triggerprein %1 -- %2%{?3: %3 %4}\
  echo "--- triggerprein(%1) -- %2%{?3: %3 %4}	arg $1 $2 ..."\
%nil
%triggerin()	%%triggerin %1 -- %2%{?3: %3 %4}\
