#!/bin/sh
#set -x 
db_dist="../db/dist"
CFLAGS="$CFLAGS" $db_dist/configure \
	$(echo $* | sed -e "s% --srcdir=[^ ]*% --enable-shared --enable-static --srcdir=$db_dist%")

mv Makefile Makefile.orig
cat Makefile.orig | sed -e '/^install:/c\
distdir:\
\
install:\
\
db3_install: all install_setip \\' > Makefile
