srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

include ../Makefile.inc

LIBOBJECTS = @MISCOBJS@ 
LIBMISC = libmisc.a

# -----------------------------------------------------------------------

TARGET=everything

all: $(TARGET)

everything: $(LIBMISC)

$(LIBMISC): $(LIBOBJECTS) 
	$(AR) r $@ $(LIBOBJECTS)
	$(RANLIB) $@

$(PROGS): $(LIBOBJECTS)

clean:
	rm -f *.a *.o *~ $(PROGS)

distclean: clean
	rm -f Makefile

depend:
	topdir_path=`( cd $(top_srcdir) && pwd )` ; \
	/bin/rm -f .depend ; \
	    $(CPP) $(CFLAGS) -MM $(srcdir)/*.c | \
		sed s+$$topdir_path+$(top_srcdir)+g > .depend

ifeq (.depend,$(wildcard .depend))
include .depend
endif
