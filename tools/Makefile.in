srcdir = @srcdir@
VPATH = $(srcdir)

include $(srcdir)/../Makefile.inc

PROGS = rpmlead rpmheader rpmarchive rpmsignature dump dumpdb
LOADLIBES = @LIBS@ @ZLIB@

ifeq (.depend,$(wildcard .depend))
TARGET=everything
else
TARGET=depend everything
endif

all: $(TARGET)

everything: $(PROGS)

clean:
	rm -f *.a *.o core *~ $(PROGS)

distclean: clean
	rm -f .depend Makefile

depend:
	$(CPP) $(CFLAGS) -M $(srcdir)/*.c > .depend

$(PROGS): ../lib/librpm.a

ifeq (.depend,$(wildcard .depend))
include .depend
endif
