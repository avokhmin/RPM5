#!/bin/sh

[ -z "$1" -o -z "$2" ] && {
# usage
  echo "usage: $0 <directory> <diff-extension>" 1>&2
  exit 1
}

: ${DIFF:=diff -p}

find $1 \( -name "*$2" -o -name ".*$2" \) -print | sort |
while read f; do
    U=-u
    [ "`basename $f`" = "ChangeLog$2" ] && U=-U0
#    ${DIFF}  ${U} $f `echo $f | sed s/$2\$//`
    if [ -r "$f" ]; then
	${DIFF}  ${U} "${f}" "${f%$2}"
    else
	${DIFF}  ${U} /dev/null "${f%$2}"
    fi
done
